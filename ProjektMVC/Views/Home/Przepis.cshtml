@model IEnumerable<ProjektMVC.DB.Przepi>

@{
    ViewBag.Title = "Przepis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<font face="Oswald"><h2>Lista Przepisów</h2></font>

<p>
    
    <a href="/Home/Create" class="btn btn-default">Dodaj Nowy Przepis</a>
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Skladniki)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Skladniki)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.IdPrzepis }) |
           
            @Html.ActionLink("Delete", "Delete", new {  id=item.IdPrzepis  })
        </td>
    </tr>
}

</table>
